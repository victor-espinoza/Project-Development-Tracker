<%- include('partials/header') -%>
<h1><%=title %></h1>
<% if(user) { %>
  <form action="/create-project" method="POST">
    <div class="input-field">
      <label for="newName">Project Name:</label>
      <input type="text" name="newName" placeholder="(Default: New Project)"/>
    </div>
    <div class="input-field">
      <label for="newStatus">Status:</label>
      <input type="text" name="newStatus" placeholder="(Default: In Progress)"/>
    </div>
    <div class="input-field">
      <label for="newStartDate">Start Date: (MM/DD/YYYY)</label>
      <input type="text" name="newStartDate" placeholder="(Default: Today's Date)" class="date-input"/>
    </div>
    <div class="input-field">
      <label for="newDueDate">Due Date: (MM/DD/YYYY)</label>
      <input type="text" name="newDueDate" placeholder="(Default: Today's Date + 1 Month)" class="date-input" />
    </div>
    <div class="input-field">
      <br/>
      <input type="submit" value="Create Project" name="submitData"/>
    </div>
  </form>
<% } %>

<%- include('partials/footer') -%>